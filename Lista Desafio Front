<script>
//Ex:8
let num = prompt("JÁ FIZ NA QUESTÃO 2! hahaha");
let booleaninho;

  function isBoolean(num) {
 		if (num > 2){
 		  booleaninho = true;
         return booleaninho;
 		}
 		else{
 		booleaninho = false;
         return booleaninho;
 		}
	}

  //isBoolean(num);

    console.log(isBoolean(num));
</script>
