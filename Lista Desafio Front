<script>
//Ex:6
let filme;
let musica;

  function denovoViniBispo() {
    filme = prompt("Escreve teu filme!");
    musica = prompt("Agora aquela música que te lembra a morena?");
  }
  
  denovoViniBispo();
  
  console.log(filme);
  console.log(musica);
</script>
