<script>
//Ex:5
let nome = prompt("Escreve teu nome ai!");
let idade = prompt("Agora a idade condenado!");
let estilo = prompt("Que porcaria vc ouve?");

  function nomeFeio(nome, idade, estilo) {
   return nome;
   return idade;
   return estilo
  }
  
  nomeFeio(nome, idade, estilo);
  
  console.log(nome);
  console.log(idade);
  console.log(estilo);
</script>

//OU só inserido o valor na variável pra ficar repetindo menos palavras!!
<script>
//Ex:5
let nome;
let idade;
let estilo;

  function nomeFeio() {
    nome = prompt("Escreve teu nome ai!");
    idade = prompt("Agora a idade condenado!");
    estilo = prompt("Que porcaria vc ouve?");
  }
  
  nomeFeio();
  
  console.log(nome);
  console.log(idade);
  console.log(estilo);

</script>
