<script>
//Ex:2
let num = prompt("Contador de números pares: Insira um número entre 0 e 20");
let par;

  function isEven(num) {
 		if (num % 2 === 0){
 		  par = true;
 		}
 		else{
 		  par = false;
 		}
	}

  isEven(num);
  
  if (num >= 0 && num <= 20){
    	if (par == true){
    	for ( let i = num; i <= 20; i+=2 )
        	{
       		console.log(i);
        	}
    	}
        
    	else if (par == false) {
        console.log("Número impar");
    	}
  }

  else {
    console.log("Valor inválido!");
  }
</script>
