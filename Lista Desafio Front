// OU enviando Parametro e fazendo return pra caso tu queira repetir sua variável várias vezes hehe
<script>
//Ex:4
let nome = prompt("Escreve teu nome ai!");

  function nomeFeio(nome) {
   return nome;
  }
  
  nomeFeio(nome);
  
  console.log(nome);
</script>

