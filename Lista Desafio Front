<script>
//Ex:1
let condicao = prompt("Ainda é dia ou já é noite?", "Escreva somente Dia ou Noite");
	  condicao = condicao.toLowerCase();
      
  if (condicao == "dia") {
    console.log("Claro!");
  }
  
  else if (condicao == "noite") {
  console.log("De Noite!");  
}
</script>
